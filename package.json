{
  "name": "@weapp-tailwindcss/postcss-calc",
  "version": "1.0.0",
  "packageManager": "pnpm@10.16.1",
  "description": "PostCSS plugin to reduce calc()",
  "keywords": [
    "css",
    "postcss",
    "postcss-plugin",
    "calculation",
    "calc"
  ],
  "homepage": "https://github.com/postcss/postcss-calc",
  "repository": {
    "type": "git",
    "url": "https://github.com/postcss/postcss-calc.git"
  },
  "main": "src/index.js",
  "types": "types/index.d.ts",
  "files": [
    "src",
    "types",
    "LICENSE"
  ],
  "scripts": {
    "prepare": "pnpm run build && tsc",
    "build": "jison ./parser.jison -o src/parser.js",
    "lint": "eslint . && tsc",
    "test": "vitest run",
    "test:dev": "vitest",
    "publish-packages": "pnpm publish --no-git-checks"
  },
  "author": "Andy Jansson",
  "license": "MIT",
  "engines": {
    "node": "^18.12 || ^20.9 || >=22.0"
  },
  "devDependencies": {
    "@types/node": "^22.15.17",
    "eslint": "^9.25.1",
    "eslint-config-prettier": "^10.1.5",
    "jison-gho": "0.6.1-216",
    "postcss": "^8.5.3",
    "prettier": "^3.5.3",
    "typescript": "~5.8.3",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "postcss-selector-parser": "^7.1.0",
    "postcss-value-parser": "^4.2.0"
  },
  "peerDependencies": {
    "postcss": "^8.4.38"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  }
}
